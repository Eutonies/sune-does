<div class="sundo-medicine-component container-fluid">
    <div class="row">
        <div class="col-lg-8 col-12">
            <div class="container-fluid sundo-medicine-component-text">
                <div class="row">
                    <div class="col-12">
                        <h1 class="sundo-medicine-component-header">@(MedicineName.ToUpper())</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @MedicineDescription
                    </div>
                </div>

                <div class="row sundo-medicine-component-suggestion-header-row">
                    <div class="col-12">
                        <h2 class="sundo-medicine-component-suggestion-header">SUNE SUGGESTS</h2>
                    </div>
                </div>


                <div class="row sundo-medicine-component-suggestion">
                    <div class="col-12">
                        @Suggestion
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-4 d-none d-lg-block">
            <div class="container-fluid sundo-medicine-component-notify">
                <MedicineNotificationButton OnClick="OnNotifyButtonClicked"></MedicineNotificationButton>
                @if (ImageFile != null)
                {
                    <img src="images/medicine/@ImageFile" class="sundo-medicine-component-image @TemperatureClass" />
                }
            </div>
        </div>
    </div>
    <div class="row d-lg-none pb-5 mb-5">
        <div class="col-12">
            <div class="container-fluid sundo-medicine-component-notify">
                <MedicineNotificationButton OnClick="OnNotifyButtonClicked"></MedicineNotificationButton>
                @if (ImageFile != null)
                {
                    <img src="images/medicine/@ImageFile" class="sundo-medicine-component-image @TemperatureClass" />
                }
            </div>

        </div>
    </div>


</div>